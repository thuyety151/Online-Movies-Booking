@model OnlineMoviesBooking.Models.ViewModels.ShowViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="">
    <div class="modal-header">
        <h4>Chi tiết lịch chiếu</h4>
    </div>
    <div class="modal-body">
        <form>
            <dl class="row col-sm-12">
                <dt>
                    <input hidden asp-for="Id" class="form-control" disabled />
                </dt>
                
                <dt class="col-sm-2">Tên phim</dt>
                <dd class="col-sm-10">
                    <input asp-for="MovieName" class="form-control" disabled />
                </dd>
                <dt class="col-sm-2">Poster</dt>
                <dd class="col-sm-10">
                    <img width="560" src="@Model.Poster" />
                </dd>
                <dt class="col-sm-2">Phụ đề</dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.Languages" class="form-control" disabled />
                </dd>
                <dt class="col-sm-2">Thời gian bắt đầu</dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.TimeStart" class="form-control" disabled />
                </dd>
                <dt class="col-sm-2">Thời gian kết thúc</dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.TimeEnd" class="form-control" disabled />
                </dd>
                <dt class="col-sm-2">Phòng chiếu</dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.ScreenName" class="form-control" disabled />
                </dd>
                <dt class="col-sm-2">Rạp chiếu</dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.TheaterName" class="form-control" disabled />
                </dd>
            </dl>
        </form>
        <div>
            <a asp-action="Index">Trở về</a>
        </div>
    </div>
    
</div>

