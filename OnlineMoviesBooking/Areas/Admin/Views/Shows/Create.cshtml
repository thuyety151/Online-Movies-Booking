@model OnlineMoviesBooking.Models.Models.Show

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4 class="row justify-content-center">Tạo lịch chiếu</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden />
            @*<div class="form-group">
                <select id="select-category" style="width:100%" class="js-example-basic-multiple"
                        asp-for="IdMovie" asp-items="ViewBag.Movies" multiple></select>
            </div>*@
            <div class="form-group">
                <label asp-for="IdMovie" class="control-label"></label>
                <select asp-for="IdMovie" class="js-example-basic-single" asp-items="ViewBag.Movies"></select>
                <span asp-validation-for="IdMovie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Languages" class="control-label"></label>
                <input asp-for="Languages" class="form-control" />
                <span asp-validation-for="Languages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rạp</label>
                <select id="theater" class="form-control" asp-items="ViewBag.Theaters"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdScreen" class="control-label"></label>
                <select asp-for="IdScreen" id="screen" class="form-control" asp-items="ViewBag.Screens"></select>
                <span asp-validation-for="IdScreen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TimeStart" class="control-label"></label>
                <input asp-for="TimeStart" class="form-control" />
                <span asp-validation-for="TimeStart" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Trở lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <!-- select 2-->
    <script>
        $('#theater').on('click', function () {
            var value = $('#theater').val();
            console.log(value);
            $.ajax({
                method: 'GET',
                url: '/Admin/Shows/GetScreen/' + value,
                success: function (data) {
                    $('#screen').empty();
                    $.each(data.items, function (index, value) {

                        console.log('<option value="' + value.id + '">' + value.text + '</option>');
                        $('#screen').append('<option value="' + value.id + '">' + value.text + '</option>');
                    });
                }

            });

        });
    </script>
<script>
    $(document).ready(function () {
        $('.js-example-basic-single').select2();

        
    });
    
</script>
}
