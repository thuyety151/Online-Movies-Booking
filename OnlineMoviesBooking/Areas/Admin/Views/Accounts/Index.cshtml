@*Modal của detail Account*@


<div class="modal fade" id="DetailAccountModal" tabindex="-1" role="dialog" aria-labelledby="EditModalLabelAccount">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditModalLabelAccount">Chi tiết tài khoản</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form onsubmit="return false">

                    <div class="form-group">
                        <img src="" class="img-thumbnail" id="image_detail_account" />
                    </div>
                    <div class="form-group">
                        <label>Tên</label>
                        <input class=" form-control" type="text" id="name_detail_account" readonly />
                    </div>
                    <div class="form-group">
                        <label>Ngày sinh</label>
                        <input class=" form-control " type="text" id="birthdate_detail_account" readonly />
                    </div>
                    <div class="form-group">
                        <label>Giới tính</label>
                        <input class=" form-control " type="text" id="gender_detail_account" readonly />
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input class=" form-control" type="text" id="address_detail_account" readonly />
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input class=" form-control" type="text" id="sdt_detail_account" readonly />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class=" form-control" type="text" id="email_detail_account" readonly />
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input class=" form-control" type="text" id="password_detail_account" readonly />
                    </div>
                    <div class="form-group">
                        <label>Điểm</label>
                        <input class=" form-control" type="text" id="point_detail_account" readonly />
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
