@model OnlineMoviesBooking.Models.ViewModels.ScreenViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4  class="row justify-content-center">Chi tiết phòng chiếu</h4>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameTheater" class="control-label"></label>
                <input asp-for="NameTheater" class="form-control" />
                <span asp-validation-for="NameTheater" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

