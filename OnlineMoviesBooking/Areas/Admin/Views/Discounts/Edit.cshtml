@model OnlineMoviesBooking.Models.Models.Discount

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<h4  class="row justify-content-center">Chỉnh sửa khuyến mãi</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageDiscount" class="control-label"></label>
                <input type="file" name="files" accept="image/*" class="form-control-file" />
                @*<span asp-validation-for="ImageDiscount" class="text-danger"></span>*@
                <img src="@Model.ImageDiscount" width="560px"/>
            </div>
            <div class="card border-primary mb-3">
                <div class="card-header">Mức khuyến mãi</div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="PercentDiscount" class="control-label"></label>
                        <input asp-for="PercentDiscount" class="form-control" />
                        <span asp-validation-for="PercentDiscount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxCost" class="control-label"></label>
                        <input asp-for="MaxCost" class="form-control" />
                        <span asp-validation-for="MaxCost" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="card border-primary mb-3">
                <div class="card-header">Đối tượng áp dụng</div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="NoTicket" class="control-label"></label>
                        <input asp-for="NoTicket" class="form-control" />
                        <span asp-validation-for="NoTicket" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Point" class="control-label"></label>
                        <input asp-for="Point" class="form-control" />
                        <span asp-validation-for="Point" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <input asp-for="Used" hidden/>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Trở lại</a>
            </div>
        </form>

    </div>
</div>
