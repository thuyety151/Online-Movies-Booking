@model IEnumerable<OnlineMoviesBooking.Models.ViewModels.ShowViewModel>
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}


<!-- ==========Preloader========== -->
<div class="preloader" style="display: none;">
    <div class="preloader-inner">
        <div class="preloader-icon">
            <span></span>
            <span></span>
        </div>
    </div>
</div>
<!-- ==========Preloader========== -->
<!-- ==========Overlay========== -->
<div class="overlay"></div>
<a href="http://pixner.net/boleto/demo/movie-ticket-plan.html#0" class="scrollToTop">
    <i class="fas fa-angle-up"></i>
</a>
<!-- ==========Overlay========== -->
<!-- ==========Window-Warning-Section========== -->
<section class="window-warning inActive">
    <div class="lay"></div>
    <div class="warning-item">
        <h6 class="subtitle">Welcome! </h6>
        <h4 class="title">Select Your Seats</h4>
        <div class="thumb">
            <img src="~/Customer/logo/seat-plan.png" alt="movie">
        </div>
        <a href="http://pixner.net/boleto/demo/movie-seat-plan.html" class="custom-button seatPlanButton">Seat Plans<i class="fas fa-angle-right"></i></a>
    </div>
</section>
<div >
    <h1 id="Id" hidden>@ViewBag.Id</h1>
</div>
<!-- ==========Window-Warning-Section========== -->
<!-- ==========Banner-Section========== -->
<section class="details-banner hero-area bg_img" data-background="" style="">
    <div class="container">
        <div class="details-banner-wrapper">
            <div class="details-banner-content">
                <!--TÊN MOVIE-->
                <h3 id="nameMovie"class="title">@ViewBag.Movie</h3>
                <div class="tags">
                    <a>English</a>
                    <a>Hindi</a>
                    <a>Telegu</a>
                    <a>Tamil</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->
<!-- ============ date==================-->
<section id="date" class="book-section bg-one" style=" margin-bottom: 2rem;">
    <div class="container">
        <div class=" ticket-search-form two row justify-content-center" style="font-size: 25px;margin-bottom: 2rem;">
            Chọn ngày
        </div>
        <form class="ticket-search-form two" style=" display: inline-flex;">
            @foreach (var item in ViewBag.Date)
            {
                <div id="dates" class="details-banner-content" style=" margin: 0 1rem;">
                    <a href="#theater" id="date-a" class="button">@item</a>
                </div>
            }
        </form>
    </div>
</section>
<!-- ===========Theater================-->

<section id="theater" class="book-section bg-one" style=" margin-bottom: 2rem;">
    <div class="container">
        <div class=" ticket-search-form two row justify-content-center" style="font-size: 25px;margin-bottom: 2rem;">
            Chọn Rạp
        </div>
        <form class="ticket-search-form two" style=" display: inline-flex;">
            @foreach (var item in ViewBag.Theater)
            {
                <div class="details-banner-content" style=" margin: 0 1rem;">
                    <a href="#language" id="theater-a"  class="  button">@item.Name</a>
                </div>
            }
        </form>
    </div>
</section>
<!-- ===========Languages================-->

<section id="language" class="book-section bg-one" style=" margin-bottom: 2rem;">
    <div class="container">
        <div class=" ticket-search-form two row justify-content-center" style="font-size: 25px;margin-bottom: 2rem;">
            Chọn .....
        </div>
        <form class="ticket-search-form two" style=" display: inline-flex;">
            @foreach (var item in ViewBag.Theater)
            {
                <div class="details-banner-content" style=" margin: 0 1rem;">
                    <a class="  button">@item.Name</a>
                </div>
            }
        </form>
    </div>
</section>


<!-- ==========Book-Section========== -->
<section class="book-section bg-one">
    <div class="container">
        <form class="ticket-search-form two">
            <div class="form-group">
                <div class="thumb">
                    <img src="~/Customer/logo/city.png" alt="ticket">
                </div>
                <span class="type">Thành phố</span>
                <select class="select-bar" style="display: none;">
                    <option value="london">London</option>
                    <option value="dhaka">dhaka</option>
                    <option value="rosario">rosario</option>
                    <option value="madrid">madrid</option>
                    <option value="koltaka">kolkata</option>
                    <option value="rome">rome</option>
                    <option value="khoksa">khoksa</option>

                </select>
            </div>
            <div id="date" class="form-group">
                <div class="thumb">
                    <img src="~/Customer/logo/date.png" alt="ticket">
                </div>
                <span class="type">Ngày</span>
                <select class="select-bar" style="display:block !important">
                </select>
            </div>
            <!-- debug-->
            <div class="form-group">
                <div class="thumb">
                    <img src="~/Customer/logo/cinema.png" alt="ticket">
                </div>
                <span class="type">Rạp</span>
                <div id="theater" class="nice-select select-bar">
                    <select>
                        @foreach (var item in ViewBag.Theater)
                        {
                            <option id="theater" value=@item.Id>@item.Name</option>
                        }
                    </select>
                </div>
            </div>


            <div class="form-group">
                <div class="thumb">
                    <img src="~/Customer/logo/exp.png" alt="ticket">
                </div>
                <span class="type">Experience</span>
                <select class="select-bar" style="display: none;">
                    <option value="English-2D">English-2D</option>
                    <option value="English-3D">English-3D</option>
                    <option value="Hindi-2D">Hindi-2D</option>
                    <option value="Hindi-3D">Hindi-3D</option>
                    <option value="Telegu-2D">Telegu-2D</option>
                    <option value="Telegu-3D">Telegu-3D</option>
                </select>
            </div>
        </form>
    </div>
</section>
