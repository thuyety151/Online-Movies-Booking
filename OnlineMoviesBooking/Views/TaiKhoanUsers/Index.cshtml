@model IEnumerable<OnlineMoviesBooking.Models.Models.DB.TaiKhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Danh sách tài khoản</h1>
<br />
<a data-toggle="modal" href="#Create" class="btn btn-primary" style="text-align:right;margin-bottom:2rem">Tạo tài khoản</a>
<br />
<table class="table" style="font-size:small" id="table_id">
    <thead class="bg-light">
        <tr style="text-align:center">
            <th style="width:3rem">
                STT
            </th>
            <th>
                Tên

            </th>
            <th style="width:8rem">
                Ngày sinh

            </th>
            <th style="width:5rem">
                Giới tính

            </th>
            <th>
                Địa chỉ

            </th>
            <th>
                SĐT

            </th>
            <th style="width:8rem">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="width:8rem">
                Loại TK

            </th>
            <th style="width:14rem">
                
            </th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;
            @foreach (var item in Model)
            {
                <tr>
                    <td> @{i++;} @i</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenKhachHang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    @{if (item.GioiTinh == true)
                        {
                            <td>Nam</td>
                        }
                        else if (item.GioiTinh == false)
                        {
                            <td>Nữ</td>
                        }
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sdt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usertype.UsertypeId)
                    </td>
                    <td style="text-align:right;">
                        <a href="#" data-target="#modal_edit" data-toggle="modal" data-id="@item.IdTaiKhoan" class="btn btn-success" style="font-size:small">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdTaiKhoan" class="btn btn-info" style="font-size:small">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdTaiKhoan" class="btn btn-danger" style="font-size:small">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
