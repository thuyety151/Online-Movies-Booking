@model OnlineMoviesBooking.Models.Models.Screen

@{
    ViewData["Title"] = "Edit";
}

<h4 class="row justify-content-center">Chỉnh sửa phòng chiếu</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdTheater" class="control-label col-md-6"></label>
                <select asp-for="IdTheater" class="form-control" asp-items="ViewBag.Theater">
                <span asp-validation-for="IdTheater" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>

</div>
<div class="row justify-content-center">

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
