@model OnlineMoviesBooking.Models.ViewModel.ContactViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    @*<link href="~/Template/css/all.min.css" rel="stylesheet" />*@
    <link href="~/Template/css/animate.css" rel="stylesheet" />
    <link href="~/Template/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Template/css/flaticon.css" rel="stylesheet" />
    <link href="~/Template/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Template/css/main.css" rel="stylesheet" />
    <link href="~/Template/css/nice-select.css" rel="stylesheet" />
    <link href="~/Template/css/odometer.css" rel="stylesheet" />
    <link href="~/Template/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Template/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/css/build/toastr.css" rel="stylesheet" />
</head>

<body>

    <!-- ==========Contact-Section========== -->
    <section class="contact-section padding-top">
        <div class="contact-container">
            <div class="bg-thumb bg_img"></div>
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-md-7 col-lg-6 col-xl-5">
                        <div class="section-header-3 left-style">
                            <span class="cate">Liên hệ</span>
                            <h2 class="title">đặt câu hỏi</h2>
                            <p>Hãy để chúng tôi giải đáp những thắc mắc của bạn</p>
                        </div>
                        <form class="contact-form" id="contact_form_submit" asp-action="CreateContactView">
                            <div class="form-group">
                                <label for="email">Email<span>*</span></label>
                                <input type="text" asp-for="Email" placeholder="Nhập Email" name="email" id="email" required>
                            </div>
                            <div class="form-group">
                                <label for="message">Nội dung<span>*</span></label>
                                <textarea asp-for="Content" class="form-control" placeholder="Nhập nội dung"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Gửi">
                            </div>
                        </form>
                    </div>
                   
                </div>
            </div>
        </div>
    </section>
    <!-- ==========Contact-Section========== -->


</body>
</html>
@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    @*<script src="~/DataTables/js/dataTables.bootstrap4.min.js"></script>*@
    <script src="~/DataTables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/Questionanswer.js"></script>

}

