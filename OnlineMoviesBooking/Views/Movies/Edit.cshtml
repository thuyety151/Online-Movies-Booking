@model OnlineMoviesBooking.Models.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1 class="row justify-content-center">Chỉnh sửa phim</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
