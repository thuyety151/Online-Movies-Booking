
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
</head>
<body style="background-color: rgb(43,3,1);position:relative;z-index:0;top:0px;width:100%;height:100%" class="text-center">
    
    <div style="width:100%;position:relative;background-color:rgb(43,3,1)">
        

        <div class="row justify-content-center">
            <img src="~/assets/Img_aventure/tải xuống (7).jfif" alt="Alternate Text" style="width:103%;position:absolute;z-index:0" />
            <div style="width:30rem;margin-top:20rem">
                <div class="shadow border-0 rounded" style="margin-top:10rem;background-color:darkred;opacity:0.85">
                    <div style="width:100%;font-size:2rem;padding:1rem;color:aliceblue;text-align:center">Login</div>
                    <div class="card-body">
                        <form>
                            <div class="form-group" style="text-align:left">
                                <label class="small" for="inputEmailAddress" style="color:aliceblue;font-size:24px">Email</label>
                                <input class="form-control py-4" id="inputEmailAddress" type="email" placeholder="Enter email address" />
                            </div>
                            <div class="form-group" style="text-align:left">
                                <label class="small mb-1" for="inputPassword" style="color:aliceblue;font-size:24px">Password</label>
                                <input class="form-control py-4" id="inputPassword" type="password" placeholder="Enter password" />
                            </div>
                            <div class="form-group" style="text-align:left">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                    <label class="custom-control-label" style="color:aliceblue;" for="rememberPasswordCheck">Remember password</label>
                                </div>
                            </div>
                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a style="font-weight:500;" href="password.html">Forgot Password?</a>
                                <a class="btn btn-primary" href="/DashBoard/DashBoard">Login</a>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <div><a href="#" style="font-weight:500;">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>

    </div>


</body>
</html>
