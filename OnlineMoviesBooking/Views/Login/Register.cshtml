@model OnlineMoviesBooking.Models.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register1";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @*<link href="~/Template/css/all.min.css" rel="stylesheet" />*@
    <link href="~/Template/css/animate.css" rel="stylesheet" />
    <link href="~/Template/css/flaticon.css" rel="stylesheet" />
    <link href="~/Template/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Template/css/odometer.css" rel="stylesheet" />
    <link href="~/Template/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Template/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Template/css/nice-select.css" rel="stylesheet" />
    <link href="~/Template/css/main.css" rel="stylesheet" />


</head>
<body style="z-index:0;top:0px;width:100%;height:100%" class="text-center">

    <!-- ==========Preloader========== -->
    <div class="preloader" style="display: none;">
        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ==========Preloader========== -->
    <!-- ==========Sign-In-Section========== -->
    <section class="account-section" style="margin-top:7rem">
        <div class="container">
            <div class="padding-top padding-bottom">
                <div class="account-area">
                    <div class="section-header-3">
                        <span class="cate">welcome</span>
                        <h2 class="title">to Boleto </h2>
                    </div>
                    <form class="account-form" asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label>Tên đăng nhập<span>*</span></label>
                            <input type="text" asp-for="Username" placeholder="Enter Your Email" id="email1" required>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Họ tên<span>*</span></label>
                            <input type="text" asp-for="FullName" placeholder="Enter Your Email" id="email1" required>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Email<span>*</span></label>
                            <input asp-for="Email" type="text" placeholder="Enter Your Email" id="email1" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại<span>*</span></label>
                            <input type="text" asp-for="SDT" placeholder="Enter Your Email" id="email1" required>
                            <span asp-validation-for="SDT" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu<span>*</span></label>
                            <input asp-for="Password" type="password" placeholder="Password" id="pass1" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Nhập lại mật khẩu<span>*</span></label>
                            <input asp-for="PasswordConfirm" type="password" placeholder="Password" id="pass2" required>
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Đăng ký">
                        </div>
                    </form>
                    <div class="option">
                        Already have an account? <a href="http://pixner.net/boleto/demo/sign-in.html">Login</a>
                    </div>
                    <div class="or"><span>Or</span></div>
                    <ul class="social-icons">
                        <li>
                            <a href="http://pixner.net/boleto/demo/sign-up.html#0">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                        </li>
                        <li>
                            <a href="http://pixner.net/boleto/demo/sign-up.html#0" class="active">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="http://pixner.net/boleto/demo/sign-up.html#0">
                                <i class="fab fa-google"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- ==========Sign-In-Section========== -->
    <script src="~/Template/js/jquery-3.3.1.min.js"></script>
    <script src="~/Template/js/modernizr-3.6.0.min.js"></script>
    <script src="~/Template/js/plugins.js"></script>
    <script src="~/Template/js/isotope.pkgd.min.js"></script>
    <script src="~/Template/js/magnific-popup.min.js"></script>
    <script src="~/Template/js/owl.carousel.min.js"></script>
    <script src="~/Template/js/wow.min.js"></script>
    <script src="~/Template/js/countdown.min.js"></script>
    <script src="~/Template/js/odometer.min.js"></script>
    <script src="~/Template/js/viewport.jquery.js"></script>
    <script src="~/Template/js/nice-select.js"></script>
    <script src="~/Template/js/main.js"></script>
</body>
</html>

