@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<body style="background-color:darkslateblue">
    <div style="margin-top:10rem">
        <div class="modal-dialog" role="document">
            <!--Content-->
            <div class="modal-content form-elegant">
                <!--Header-->
                <div class="modal-header text-center">
                    <h3 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="myModalLabel"><strong>Quên mật khẩu</strong></h3>
                    
                </div>
                <!--Body-->
                <div class="modal-body mx-4">
                    <!--Body-->
                    <div class="md-form mb-5">
                        <input type="email" id="Form-email1" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="Form-email1">Email</label>
                    </div>
                    <div class="text-center mb-3">
                        <a type="button" class="btn blue-gradient btn-block btn-rounded z-depth-1a">Tiếp tục</a>
                    </div>
                    

                </div>
               
            </div>
            <!--/.Content-->
        </div>
    </div>
    <!-- Modal -->

</body>
