@model OnlineMoviesBooking.Models.Models.Theater

@{
    ViewData["Title"] = "Details";
}

<h4 class="row justify-content-center">Chi tiết rạp chiếu</h4>
<hr />
<div class=" row justify-content-center">
    <div class="col-md-4">
        <form >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotline" class="control-label"></label>
                <input asp-for="Hotline" class="form-control" />
                <span asp-validation-for="Hotline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Danh sách rạp</label>
                <textarea class="form-control" >@ViewBag.Screen</textarea>
            </div>
            <div class="form-group">
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>
