@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    @*<link href="~/Template/css/all.min.css" rel="stylesheet" />*@
    <link href="~/Template/css/animate.css" rel="stylesheet" />
    <link href="~/Template/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Template/css/flaticon.css" rel="stylesheet" />
    <link href="~/Template/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Template/css/main.css" rel="stylesheet" />
    <link href="~/Template/css/nice-select.css" rel="stylesheet" />
    <link href="~/Template/css/odometer.css" rel="stylesheet" />
    <link href="~/Template/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Template/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/css/build/toastr.css" rel="stylesheet" />
</head>

<body>
    <!-- ==========Contact-Section========== -->
    <section class="contact-section padding-top">
        <div class="contact-container">

            <div class="container">
                <div style="display:grid;grid-template-columns:30% 70%;padding:2.5rem 2rem">
                    <div style="grid-column:1;padding-top:2rem">
                        <div style="grid-column:1;margin-top:5rem" class="text-center">
                            <div class="event-about-thumb" style="width:90%; max-width:20rem;">
                                <img src="~/assets/img/harlypic.jpg" class="shadow" />
                            </div>
                        </div>
                        <br />
                        <div class="form-group text-center" >
                            <a asp-action="Index">
                                <input type="button" value="Đổi hình ảnh" />
                            </a>
                        </div>
                    </div>
                    

                    <div class="container" style="grid-column:2;">
                        <h2 class="title text-center" style="padding-top:2rem;margin-bottom:2rem">Chỉnh sửa thông tin</h2>
                        <form class="contact-form" id="contact_form_submit" asp-action="Edit">
                            
                            @*<div class="form-group ">
            <h6>Tên</h6>
            <label>Trần Thanh Toàn</label>
        </div>*@
                            <div class="form-group">
                                <label>Tên<span>*</span></label>
                                <input type="text" @*asp-for="Name"*@ required value="Trần Thanh Toàn">
                            </div>
                            @*<div class="form-group">
            <h6>Ngày sinh</h6>
            <label>11 - 5 - 2000</label>
        </div>*@
                            <div class="form-group">
                                <label>Ngày sinh<span>*</span></label>
                                <input type="text" @*asp-for="Birthdate"*@ required value="11 - 5 - 2000" />
                            </div>
                            @*<div class="form-group">
            <h6>Giới tính</h6>
            <label>Nam</label>
        </div>*@
                            <div class="form-group">
                                <label>Giới tính<span>*</span></label>
                                <select style="background-color:transparent" @*asp-for="Gender"*@ required>
                                    <option value="True">Nam</option>
                                    <option value="False">Nữ</option>
                                </select>
                            </div>
                            @*<div class="form-group">
            <h6>Email</h6>
            <label>thanhtontran115@gmail.com</label>
        </div>*@
                            <div class="form-group">
                                <label>Email<span>*</span></label>
                                <input type="text" @*asp-for="Email"*@ required value="thanhtontran115@gmail.com" />
                            </div>
                            @*<div class="form-group">
            <h6>Địa chỉ</h6>
            <label>Số 1 Võ văn Ngân, phường Linh Trung, quận Thủ Đức, Tp.Hồ Chí Minh</label>
        </div>*@
                            <div class="form-group">
                                <label>Địa chỉ<span>*</span></label>
                                <input type="text" @*asp-for="Address"*@ required value="Số 1 Võ văn Ngân, phường Linh Trung, quận Thủ Đức, Tp.Hồ Chí Minh" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Lưu">
                            </div>

                        </form>
                        <br />
                        <div class="form-group container-fluid">
                                <input type="button" value="Quay lại" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- ==========Contact-Section========== -->
    <script src="~/Template/js/jquery-3.3.1.min.js"></script>
    <script src="~/Template/js/modernizr-3.6.0.min.js"></script>
    <script src="~/Template/js/plugins.js"></script>
    <script src="~/Template/js/isotope.pkgd.min.js"></script>
    <script src="~/Template/js/magnific-popup.min.js"></script>
    <script src="~/Template/js/owl.carousel.min.js"></script>
    <script src="~/Template/js/wow.min.js"></script>
    <script src="~/Template/js/countdown.min.js"></script>
    <script src="~/Template/js/odometer.min.js"></script>
    <script src="~/Template/js/viewport.jquery.js"></script>
    <script src="~/Template/js/nice-select.js"></script>
    <script src="~/Template/js/main.js"></script>

</body>
</html>


