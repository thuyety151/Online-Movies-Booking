@model OnlineMoviesBooking.Models.ViewModels.ShowViewModel

@{
    ViewData["Title"] = "Create";
}

<h4 class="row justify-content-center">Tạo lịch chiếu</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="IdMovie" class="control-label"></label>
                <select asp-for="IdMovie" class="form-control" asp-items="ViewBag.Movies"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Rạp</label>
                <select id="theater" class="form-control" asp-items="ViewBag.Theaters"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdScreen" class="control-label"></label>
                <select id="screen" asp-for="IdScreen" class="form-control js-example-basic-single"></select>
            </div>
            <div class="form-group">
                <label asp-for="Languages" class="control-label"></label>
                <input asp-for="Languages" class="form-control" />
                <span asp-validation-for="Languages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeStart" class="control-label"></label>
                <input asp-for="TimeStart" class="form-control" />
                <span asp-validation-for="TimeStart" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Trở lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- select 2-->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <!-- thư viện jquery-->

    <script src="~/js/Show.js"></script>
}
@section Header{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />


}
