                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pagination-area text-center">
                        <a  href="/movie/now?page=@(ViewBag.page-1)" ><i class="fas fa-angle-double-left"></i><span>Prev</span></a>
                        @for (int i = 1; i <= ViewBag.AllPage; i++)
                        {
                            if (i == ViewBag.page)
                            {
                                <a class="active">@i</a>
                            }
                            else
                            {
                            <a href="/movie/now?page=@i">@i</a>
                            }
                        }
                        <a href="/movie/now?page=@(ViewBag.page+1)"><span>Next</span><i class="fas fa-angle-double-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
